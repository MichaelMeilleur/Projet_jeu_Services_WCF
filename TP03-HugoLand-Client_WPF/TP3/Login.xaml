<Window x:Class="TP3.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP3"
        mc:Ignorable="d"
        Title="Login" Height="290" Width="512">
    <Grid Margin="0,0,0,-1">
        <Grid.Background>
            <ImageBrush ImageSource="2.png"/>
        </Grid.Background>
        <Label Content="Connexion" HorizontalAlignment="Left" Margin="198,37,0,0" Width="128" FontSize="24" Height="47" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="100,99,0,0" VerticalAlignment="Top" Foreground="#FFEFEFEF"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="102,152,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="202,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="202,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnConnecter" Content="Se connecter" HorizontalAlignment="Left" Margin="202,210,0,0" VerticalAlignment="Top" Width="120" Click="btnConnecter_Click"/>

    </Grid>
</Window>
