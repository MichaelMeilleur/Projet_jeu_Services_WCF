        <Button x:Name="btnDeconnexion" Content="Se déconnecter" HorizontalAlignment="Left" Margin="49,10,0,0" VerticalAlignment="Top" Height="71" Width="245" FontSize="24" Click="btnDeconnexion_Click"/>

    </Grid>
</Window>
