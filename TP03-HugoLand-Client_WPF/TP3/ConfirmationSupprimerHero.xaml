        <Label Content="Voulez-vous vraiment supprimer l'héro?" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="btnOui" Content="Oui" HorizontalAlignment="Left" Margin="67,112,0,0" VerticalAlignment="Top" Height="42" Width="148" Click="btnOui_Click"/>
